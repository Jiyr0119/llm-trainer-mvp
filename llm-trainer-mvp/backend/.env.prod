# 生产环境配置
APP_ENV=prod
DEBUG=false

# 服务器配置
HOST=0.0.0.0
PORT=8001

# 数据库配置
DATABASE_URL=sqlite:///../data/prod_database.db

# 文件存储配置
UPLOAD_PATH=../data/prod/uploads
MODEL_PATH=../data/prod/models
LOG_PATH=../data/prod/logs
LOG_LEVEL=WARNING
LOG_FILE=../data/prod/training.log

# CORS配置
CORS_ORIGINS=https://llm-trainer.example.com

# 模型配置
DEFAULT_MODEL=bert-base-uncased

# 训练配置
DEFAULT_BATCH_SIZE=16
DEFAULT_EPOCHS=5
DEFAULT_LEARNING_RATE=2e-5